<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="@android:dimen/thumbnail_width"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locations"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="locations"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"></TextView>

    <TextView

        android:id="@+id/nameLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:text="locations"></TextView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="type"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"></TextView>

    <TextView
        android:id="@+id/typeLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:text="type"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dimension"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="dimension"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"></TextView>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/dimensionLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="dimension"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        ></TextView>

</LinearLayout>