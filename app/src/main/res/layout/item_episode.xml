<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@android:dimen/thumbnail_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="episode:"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"></TextView>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/nameEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black"
        tools:text="episode"
        ></TextView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/air_date"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="air date:"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"></TextView>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/airDateEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="air_date"
        android:textColor="@color/black"
        ></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/episodess"
        android:textColor="#686868"
        android:textSize="8sp"
        tools:text="episode:"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"></TextView>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/episodeEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="episode"
        android:textColor="@color/black"
        ></TextView>

</LinearLayout>